<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="180dp"
        android:layout_marginTop="90dp"
        android:text="@string/sign_in"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/black"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sign_in"
        android:layout_alignStart="@id/password"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:text="@string/login"
        android:textColor="@android:color/black"
        android:textSize="@dimen/label_common" />

    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/password_field"
        android:layout_alignParentStart="true"
        android:layout_marginStart="40dp"
        android:text="@string/password"
        android:textColor="@android:color/black"
        android:textSize="@dimen/label_common" />

    <EditText
        android:id="@+id/login_field"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/field_height_common"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="@string/enter_login"
        android:textColorHint="@android:color/black"
        android:layout_alignBaseline="@id/login"
        android:layout_marginStart="145dp" />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/field_height_common"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="@string/enter_password"
        android:textColorHint="@android:color/black"
        android:layout_below="@id/login_field"
        android:layout_alignEnd="@id/login_field" />

    <Button
        android:id="@+id/button_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_field"
        android:layout_alignEnd="@id/password_field"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="150dp"
        android:text="@string/button_sign_in" />

</RelativeLayout>